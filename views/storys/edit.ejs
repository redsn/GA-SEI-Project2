<%-  include('../partials/userHead') %>
<%-  include('../partials/userHeader') %>

<h1><%= story.title %></h1>

<h3> Page <%= PAGEID %> </h3>

<form action="/story/final/<%= STORYID %>/<%= PAGEID %>?_method=PUT" method="post">

    <label for="pages">
        Content to be shown
    <textarea name="pages" id="pages" cols="30" rows="10" value="<%= page.content%>"><%= page.content %></textarea>
    </label>

    <label for="choiceAText">
        Text for first choice
        <input type="text" name="choiceAText" id="choiceAText" value="<%= book.choiceAText[PAGEID - 1] %>">
        <input type="text" name="choiceA" id="choiceA" value="<%=book.choiceA[PAGEID-1]%>" hidden>
    </label>

    <label for="choiceBText">
        Text for second choice
        <input type="text" name="choiceBText" id="choiceBText" value="<%= book.choiceBText[PAGEID - 1] %>">
        <input type="text" name="choiceB" id="choiceB" value="<%=book.choiceB[PAGEID-1]%>" hidden>
    </label>

    <label for="end">
        Is this page a DEADEND ?
        <input type="checkbox" name="end" id="end">
    </label>
    <% if (PAGEID < book.pagesMax) {%>
        <input type="checkbox" name="complete" id="complete" hidden>
        <input type="submit" value="Next Page">
        <%} else { %>
            <input type="checkbox" name="complete" id="complete" checked hidden>
            <input type="submit" value="Finalize">
        <% } %>
</form>





<%- include('../partials/userFooter') %>