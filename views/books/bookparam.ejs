<%- include('../partials/userHead') %>
<%- include('../partials/userHeader') %>
<div class="mainCont">

<h1> Book Parameters</h1>

<form action="/book/init" method="post">

    <label for="title">
        Title:
        <input type="text" name="title" id="title" placeholder="Name of Book">
    </label>

    <label for="pagesMax">
        Number of Pages: (3-10)
        <input type="number" name="pagesMax" id="pagesMax" min="3" max="10" value="5">
    </label>

    <label for="private">
        Make this Public ?
        <input type="checkbox" name="private" id="private">
    </label>

    <label for="submit">
        <input type="submit" value="Start!">
    </label>

</form>
</div>
