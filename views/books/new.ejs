<%- include('../partials/userHead') %>
<%- include('../partials/userHeader') %>
<div class="mainCont">
    <div class="bookParam">
<h1>Making a Story</h1>


    <p>If you want this page to be an endpoint, type end into one of the choices. Adapt later on</p>
    <h3>Page <%=place%> of <%=book.pagesMax%></h3>
    <form action="/book/create/<%=bookID%>/<%=place%>?_method=PUT" method="post">
    <h4> Page Name </h4>
    <select name="pages" id="pages">    
        <% page.forEach( result => { %>
            <% if(user.favorites.includes(result.id)){ %>
                <option value="<%=result.id%>"><%=result.eventName%></option>
            <% } %>
        <% }) %>
    </select>

    <h4>Choice A</h4>
    <input type="text" name="choiceAText" id="choiceAText"  placeholder="Go Home">
    <h4>Destination A: Page Number</h4>
    <select name="choiceA" id="choiceA">
        <option value="Do Nothing">Do Nothing</option>
        <% for(i=0; i < book.pagesMax; i ++ ){%>
            <option value="<%= i + 1 %>">Page <%= i + 1 %></option>
        <%}%>
    </select>

    <h4>Choice B</h4>
    <input type="text" name="choiceBText" id="choiceBText" placeholder="Face your fears">
    <h4>Destination B: Page Number</h4>
    <select name="choiceB" id="choiceB">
        <option value="Do Nothing">Do Nothing</option>
        <% for(i=0; i < book.pagesMax; i ++) { %>
            <option value="<%= i + 1 %>">Page <%= i + 1 %></option>
        <%}%>
    </select>
    <% if (place < book.pagesMax ) { %>
    <input type="submit" value="Next Page" class="navButton">
<% } else { %>
    <input type="submit" value="Complete" class="navButton">
    <% } %>
    </form>
</div>
</div>
<%- include('../partials/userFooter') %>